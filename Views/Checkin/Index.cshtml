@model AsitenciaUNC_attemp_2.Models.Evento
@{
	ViewData["Title"] = "Código QR de asistencia";
}

<!-- Views/EventosUser/Detalles.cshtml -->
<div class="container mx-auto p-6">
    <h1 class="text-3xl font-bold text-primary mb-4">@Model.Titulo</h1>
    <p><strong>Fecha:</strong> @Model.FechaInicio?.ToShortDateString()</p>
    <p><strong>Descripción:</strong> @Model.Descripcion</p>

    @if (ViewBag.QrCode != null)
    {
        <div class="text-center">
            <h2 class="text-2xl font-bold text-primary mb-4">Tu Código QR</h2>
            <img alt="Código QR" class="img-responsive" src="data:image/png;base64,@ViewBag.QrCode" />
        </div>
    }
    else
    {
        <form asp-action="RegistrarseEvento" method="post">
            <input type="hidden" name="id" value="@Model.Id" />
            <button type="submit" class="mt-4 bg-primary hover:bg-secondary text-white py-2 px-4 rounded">Registrarse en el evento</button>
        </form>
    }
</div>