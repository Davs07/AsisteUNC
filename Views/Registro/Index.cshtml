@model IEnumerable<AsitenciaUNC_attemp_2.Models.Registro>

@{
    ViewData["Title"] = "Lista de Registros";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Lista de Registros</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Crear" class="btn btn-success">
                Crear Nuevo Registro
            </a>
        </div>
    </div>
    <br />
    @if (Model.Count() > 0)
    {
        <table class="table table-hover table-striped" style="width:100%">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Id)</th>
                    <th>@Html.DisplayNameFor(model => model.IdUsuario)</th>
                    <th>@Html.DisplayNameFor(model => model.IdEvento)</th>
                    <th>@Html.DisplayNameFor(model => model.FechaRegistro)</th>
                    <th>@Html.DisplayNameFor(model => model.Estado)</th>
                    <th>@Html.DisplayNameFor(model => model.CodigoQrAsistencia)</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Id)</td>
                        <td>@Html.DisplayFor(modelItem => item.IdUsuario)</td>
                        <td>@Html.DisplayFor(modelItem => item.IdEvento)</td>
                        <td>@Html.DisplayFor(modelItem => item.FechaRegistro)</td>
                        <td>@Html.DisplayFor(modelItem => item.Estado)</td>
                        <td>@Html.DisplayFor(modelItem => item.CodigoQrAsistencia)</td>
                        <td>
                            <a asp-action="Detalles" asp-route-id="@item.Id" class="btn btn-info">
                                <i class="fa-solid fa-eye"></i> Detalles
                            </a>
                            <a asp-action="Editar" asp-route-id="@item.Id" class="btn btn-warning text-white">
                                <i class="fa-solid fa-pen-to-square"></i> Editar
                            </a>
                            <a asp-action="Eliminar" asp-route-id="@item.Id" class="btn btn-danger">
                                <i class="fa-solid fa-trash"></i> Eliminar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-warning" role="alert">
            No hay registros disponibles.
        </div>
    }
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
}
