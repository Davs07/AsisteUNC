@using AsitenciaUNC_attemp_2.ViewModels
@model AsitenciaUNC_attemp_2.ViewModels.RegisterVM
@{
    ViewData["Title"] = "Regístrate en AsisteUNC";
}
<div class="max-w-md w-full bg-white p-8 rounded-lg shadow-lg">
    <h1 class="text-3xl font-bold text-secondary mb-6 text-center">Registro</h1>
    <form asp-action="Registro" asp-controller="Auth" method="post">
        <div class="mb-4">
            <label asp-for="Nombre" class="block text-sm font-medium text-gray-700 mb-1"></label>
            <input asp-for="Nombre" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-1 focus:ring-primary" required>
            <span asp-validation-for="Nombre" class="text-red-500 text-sm"></span>
        </div>
        <div class="mb-4">
            <label asp-for="Email" class="block text-sm font-medium text-gray-700 mb-1"></label>
            <input asp-for="Email" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-1 focus:ring-primary" required>
            <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
        </div>
        <div class="mb-4">
            <label asp-for="Contrasena" class="block text-sm font-medium text-gray-700 mb-1"></label>
            <input asp-for="Contrasena" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-1 focus:ring-primary" required>
            <span asp-validation-for="Contrasena" class="text-red-500 text-sm"></span>
        </div>
        <div class="mb-6">
            <label asp-for="ConfirmarContrasena" class="block text-sm font-medium text-gray-700 mb-1"></label>
            <input asp-for="ConfirmarContrasena" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-1 focus:ring-primary" required>
            <span asp-validation-for="ConfirmarContrasena" class="text-red-500 text-sm"></span>
        </div>
        <button type="submit" class="w-full text-white bg-primary border-2 border-primary hover:border-secondary py-2 px-4 rounded-md hover:bg-opacity-90 focus:outline-none focus:ring-2 focus:ring-primary focus:ring-opacity-50 transition duration-200">
            Registrarse
        </button>
    </form>
    <p class="mt-4 text-sm text-center text-gray-600">
        ¿Ya tienes una cuenta?
        <a asp-action="InicioSesion" asp-controller="Auth" class="text-primary hover:underline">Iniciar sesión</a>
    </p>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}