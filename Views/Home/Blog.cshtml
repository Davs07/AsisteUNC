@{
    ViewData["Title"] = "Blog - AsisteUNC";
}

<div class="container mx-auto p-6">
    <h1 class="text-4xl font-bold mb-6">Blog de AsisteUNC</h1>
    <p class="text-lg mb-8">Lee artículos sobre eventos, talleres, y actividades académicas organizadas por la UNC.</p>

    <!-- Lista de publicaciones -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        @foreach (var publicacion in ViewBag.Publicaciones)
        {
            <div class="bg-white shadow-md rounded-lg p-6">
                <h3 class="text-2xl font-semibold">@publicacion.Titulo</h3>
                <p class="text-gray-500">Autor: @publicacion.Autor</p>
                <p class="text-gray-500">Publicado el: @publicacion.FechaPublicacion.ToString("dd MMM yyyy")</p>
                <p class="text-sm mt-4">@publicacion.Resumen</p>
                <a href="#" class="text-blue-600 mt-4 inline-block">Leer más</a>
            </div>
        }
    </div>

    <!-- Botón para ver más publicaciones -->
    <div class="mt-10 text-center">
        <a href="#" class="text-white bg-blue-600 hover:bg-blue-800 py-2 px-4 rounded">Ver más publicaciones</a>
    </div>
</div>
