@model List<AsitenciaUNC_attemp_2.Models.Evento>

@{
    ViewData["Title"] = "Eventos - AsisteUNC";
}

<div class="container mx-auto py-8">
    <!-- Título -->
    <div class="text-center mb-8">
        <h1 class="text-4xl font-bold text-blue-700">Próximos Eventos</h1>
        <p class="text-gray-600 mt-2">Descubre los talleres y eventos organizados en la Universidad Nacional de Cajamarca.</p>
    </div>

    <!-- Buscador -->
    <div class="flex justify-center mb-8">
        <input type="text" placeholder="Buscar eventos..." class="w-1/2 p-3 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-500">
        <button class="ml-2 p-3 bg-blue-700 text-white rounded-lg hover:bg-blue-600">Buscar</button>
    </div>

    <!-- Vista de eventos en formato lista -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
        @foreach (var evento in Model)
        {
            <div class="bg-white shadow-lg rounded-lg p-5">
                <h3 class="text-xl font-bold text-blue-700">@evento.Titulo</h3>
                <p class="text-gray-600">@evento.Descripcion</p>
                <p class="mt-2 text-gray-500">Fecha: @evento.FechaInicio?.ToString("dd MMM yyyy")</p>
                <p class="mt-2 text-gray-500">Hora: @evento.HoraInicio?.ToString("hh:mm tt")</p>
                <p class="text-gray-500">Ubicación: @evento.Ubicacion</p>
                <a href="/Eventos/Detalle/@evento.Id" class="mt-4 inline-block bg-green-500 text-white py-2 px-4 rounded-lg hover:bg-green-600">Ver más</a>
            </div>
        }
    </div>

    <!-- Calendario de eventos -->
    <div class="mt-8">
        <h2 class="text-2xl font-bold text-blue-700 mb-4">Calendario de Eventos</h2>
        <!-- Aquí podrías integrar un calendario con eventos (JavaScript o una biblioteca) -->
        <div class="bg-white shadow-md rounded-lg p-6">
            <!-- Placeholder para el calendario -->
            <p class="text-gray-600">Calendario interactivo aquí...</p>
        </div>
    </div>
</div>