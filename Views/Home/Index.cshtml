@model List<AsitenciaUNC_attemp_2.Models.Evento>

@{
	ViewData["Title"] = "Eventos - AsisteUNC";
}

@section Styles {
	<link rel="stylesheet" href="~/css/site2.css" />
}

<main>
	<div class="slider">
		<div class="item">
			<img src="~/img/Fondo2.jpg" loading="eager" alt="Nobis Omnis" class="image" />
			<div class="content">
				<h2 class="title">Únete a nuestra plataforma</h2>
				<p class="description">
					La Universidad Nacional de Cajamarca (UNC) se distingue por su compromiso con
					la educación de calidad, formando a jóvenes que aspiran a transformar el
					futuro de nuestra sociedad. Únete a este cambio.
				</p>
				<button class="bg-black">
					<a asp-action="Registro" asp-controller="Auth">Ir a Blog</a>
				</button>
			</div>
		</div>

		<!-- Visible item -->
		<div class="item">
			<img src="~/img/Fondo2.jpg" loading="eager" alt="Nobis Omnis" class="image" />
			<div class="content">
				<h2 class="title">Únete a nuestra plataforma</h2>
				<p class="description">
					La UNC promueve vínculos internacionales, brindando oportunidades de intercambio
					académico y cultural que fortalecen la formación integral de sus estudiantes.
				</p>
				<button class="bg-black">
					<a onclick="window.location.href='/Auth/InicioSesion'">Iniciar</a>
				</button>
			</div>
		</div>

		<div class="item">
			<img src="~/img/Fondo3.jpg" loading="eager" alt="Ut Distinctio" class="image" />
			<div class="content">
				<h2 class="title">Eventos</h2>
				<p class="description">
					La Universidad Nacional de Cajamarca está a la vanguardia en investigaciones que
					impactan positivamente en la región y el país, abriendo puertas al desarrollo.
				</p>
				<button class="bg-black">
					<a asp-action="Eventos" asp-controller="Home">Ver Eventos</a>
				</button>
			</div>
		</div>

		<div class="item">
			<img src="~/img/Fondo4.jpg" loading="eager" alt="Commodi Veniam" class="image" />
			<div class="content">
				<h2 class="title">Talleres</h2>
				<p class="description">
					En la UNC, valoramos el legado de nuestros estudiantes y egresados, cuyo
					impacto trasciende generaciones, contribuyendo al crecimiento sostenible de
					nuestra región.
				</p>

				<button class="bg-black">
					<a>Ver Talleres</a>
				</button>
			</div>
		</div>

		<div class="item">
			<img src="~/img/Fondo5.jpg" loading="eager" alt="Ipsam Tenetur" class="image" />
			<div class="content">
				<h2 class="title">¿Eres nuevo?</h2>
				<p class="description">
					La UNC se compromete con el desarrollo urbano y ambiental de Cajamarca, impulsando
					investigaciones y proyectos para preservar el equilibrio entre lo urbano y lo
					natural.
				</p>
				<button class="bg-black">
					<a asp-action="Registro" asp-controller="Auth">Registro</a>
				</button>
			</div>
		</div>

		<div class="item">
			<img src="~/img/Fondo6.jpg" loading="eager" alt="Nesciunt Consectetur Similique Sit"
				 class="image" />
			<div class="content">
				<h2 class="title">Conoce</h2>
				<p class="description">
					La UNC apoya el estudio de las migraciones y sus implicancias sociales, promoviendo
					una mayor comprensión de los movimientos poblacionales y su efecto en las culturas.
				</p>
				<button class="bg-black">
					<a>Sobre Nosotros</a>
				</button>
			</div>
		</div>
	</div>

	<div class="progress-bar-container">
		<div class="progress-bar"></div>
	</div>
</main>

<div>
	<nav class="nav">
		<ion-icon class="btn prev" name="arrow-back-outline"></ion-icon>
		<ion-icon class="btn next" name="arrow-forward-outline"></ion-icon>
	</nav>
</div>

@section Scripts {
	<script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
	<script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
	<script src="~/js/site2.js"></script>
}
