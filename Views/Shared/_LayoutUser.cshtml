<!DOCTYPE html>
<html lang="es">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - AsisteUNC</title>
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha512-Fo3rlrQkzZlPRX6xDMTc+zKPoxjz8z4NjRgwt2szQjoT57OX+9wIxdoKJwTcV8l60W3/BPU2VmdT2f6eZFEg+A==" crossorigin="anonymous" referrerpolicy="no-referrer" />

	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">


	<script src="https://cdn.lordicon.com/lordicon.js"></script>

	<!-- TailwindCSS CDN -->
	<script src="https://cdn.tailwindcss.com"></script>
	<!-- Configuración de Tailwind -->
	<script>
		tailwind.config = {
			theme: {
				extend: {
					colors: {
						primary: "#0d42ff",
						secondary: "#4eed05",
					},
				},
			},
		};
	</script>
	<style>
		/* Custom minimalistic style */
		body {
			background-color: #fff;
			font-family: 'Inter', sans-serif;
			color: #333;
		}

		.navbar {
			background-color: #fff;
			border-bottom: 1px solid #eaeaea;
		}

			.navbar a {
				color: #0d42ff;
				text-decoration: none;
			}

		.footer {
			background-color: #f9f9f9;
			border-top: 1px solid #eaeaea;
			text-align: center;
			padding: 20px;
		}

		.btn-primary {
			background-color: #0d42ff;
			color: #fff;
		}

			.btn-primary:hover {
				background-color: #0b36cc;
			}

	</style>
</head>
<body class="min-h-screen flex flex-col">
	<!-- Container for the entire layout -->
	<div class="flex min-h-screen">

		<!-- Sidebar -->
		<aside class="w-48 bg-white shadow-lg flex flex-col items-center py-6 space-y-8">
			<div class="p-6 text-center">
				<img src="~/img//asisteunc2.png" loading="eager" alt="Ipsam Tenetur" class="image" />
			</div>
			<nav class="mt-10">
				<a asp-action="Index" asp-controller="EventosUser" class="block py-2.5 px-4 rounded hover:bg-blue-700 hover:text-white">
					<i class="bi bi-house"></i> Inicio
				</a>
				<a asp-action="Eventos" asp-controller="EventosUser" class="block py-2.5 px-4 rounded hover:bg-blue-700 hover:text-white">
					<i class="bi bi-calendar-event"></i> Mis Eventos
				</a>
				<a asp-action="Crear" asp-controller="EventosUser" class="block py-2.5 px-4 rounded hover:bg-blue-700 hover:text-white">
					<i class="bi bi-plus-circle"></i> Crear Evento
				</a>
				<li class="flex items-center">
					<a class="w-max gap-2 flex items-center h-max block py-2.5 px-4 rounded hover:bg-blue-700 hover:text-white">
						<i class="bi bi-calendar3"></i> Calendario
					</a>
				</li>
				<a asp-action="Index" asp-controller="PerfilUser" class="block py-2.5 px-4 rounded hover:bg-blue-700 hover:text-white">
					<i class="bi bi-person"></i> Perfil
				</a>
			</nav>


		</aside>

		<!-- Main Content -->
		<div class="flex-1 flex flex-col">

			<!-- Top Bar -->
			<header class="bg-white p-4 flex justify-end items-center shadow-lg">
				<!-- User Profile and Notifications -->
				<div class="flex space-x-6 items-center">
					<!-- Dark mode / light mode toggle -->
					<button class="text-gray-600 hover:text-purple-500 transition-colors duration-200 ease-in-out focus:outline-none">
						<svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
							<path d="M10 2a8 8 0 018 8 8.001 8.001 0 01-12.875 6.532A7.978 7.978 0 0110 2zm0 18a9.978 9.978 0 01-7.45-3.293A10 10 0 1010 20z" />
						</svg>
					</button>

					<!-- Notification Icon -->
					<div class="relative">
						<button id="notificationButton" class="relative text-gray-600 hover:text-purple-500 transition-colors duration-200 ease-in-out focus:outline-none">
							<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
								<path d="M12 19a2 2 0 0 0 2-2H10a2 2 0 0 0 2 2zM18.364 17.778A2 2 0 0 0 20 16V9a6 6 0 1 0-12 0v7a2 2 0 0 0 1.636 1.778M5 16v1a3 3 0 0 0 6 0v-1" />
							</svg>
							<!-- Notification dot -->
							<span class="absolute top-0 right-0 inline-block w-2 h-2 bg-red-500 rounded-full"></span>
						</button>
						<!-- Dropdown Menu -->
						<div id="notificationMenu" class="hidden absolute right-0 mt-2 w-64 bg-white border border-gray-200 rounded-lg shadow-lg">
							<ul>
								<li class="px-4 py-2 border-b border-gray-200">Notificación 1</li>
								<li class="px-4 py-2 border-b border-gray-200">Notificación 2</li>
								<li class="px-4 py-2">Notificación 3</li>
							</ul>
						</div>
					</div>

					<!-- Profile dropdown or login partial -->
					<div class="flex items-center space-x-3">
						<partial name="_LoginPartial" />
					</div>
				</div>
			</header>
			<!-- Main Content -->
			<main class="flex-1 container mx-auto px-4 py-8">
				@RenderBody()
			</main>

		</div>
	</div>





	@* <script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script> *@
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>


<script>
	document.getElementById('notificationButton').addEventListener('click', function () {
		var menu = document.getElementById('notificationMenu');
		menu.classList.toggle('hidden');
	});
</script>