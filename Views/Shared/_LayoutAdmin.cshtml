<!DOCTYPE html>
<html lang="es">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - AsisteUNC</title>
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
	<!-- TailwindCSS CDN -->
	<script src="https://cdn.tailwindcss.com"></script>
	<!-- Configuración de Tailwind -->
	<script>
		tailwind.config = {
			theme: {
				extend: {
					colors: {
						primary: "#0d42ff",
						secondary: "#4eed05",
					},
				},
			},
		};
	</script>
</head>
<body class="bg-transparent text-gray-900 flex">
    <!-- Sidebar -->
    <div class="bg-blue-800 text-white w-64 min-h-screen">
        <div class="p-6 text-center">
            <h1 class="text-3xl font-bold">AsisteUNC Admin</h1>
            <p class="mt-2">Panel de control</p>
        </div>
        <nav class="mt-10">
			<a asp-action="Dashboard" asp-controller="Admin" class="block py-2.5 px-4 rounded hover:bg-blue-700 hover:text-white">Dashboard</a>
			<a asp-action="Index" asp-controller="Evento" class="block py-2.5 px-4 rounded hover:bg-blue-700 hover:text-white">Eventos</a>
			<a asp-action="Usuarios" asp-controller="Admin" class="block py-2.5 px-4 rounded hover:bg-blue-700 hover:text-white">Usuarios</a>
			<a asp-action="Solicitudes" asp-controller="Admin" class="block py-2.5 px-4 rounded hover:bg-blue-700 hover:text-white">Solicitudes</a>
			<a asp-action="Reportes" asp-controller="Admin" class="block py-2.5 px-4 rounded hover:bg-blue-700 hover:text-white">Reportes</a>
			<a asp-action="Seguridad" asp-controller="Admin" class="block py-2.5 px-4 rounded hover:bg-blue-700 hover:text-white">Seguridad</a>

        </nav>
    </div>

    <!-- Main content -->
    <div class="flex-1 p-10">
        <header class="flex justify-between items-center">
            <h2 class="text-2xl font-semibold">@ViewData["Title"]</h2>
            <div class="flex items-center space-x-4">
                <span class="text-gray-600">Admin</span>
                <a asp-controller="Home" asp-action="Index" class="text-blue-600">Cerrar sesión</a>
            </div>
        </header>
        <main class="mt-6">
            @RenderBody()
        </main>
    </div>



	@* <script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script> *@
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
