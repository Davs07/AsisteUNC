<!DOCTYPE html>
<html lang="es">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - AsisteUNC</title>
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
	@RenderSection("Styles", required: false)
	<!-- TailwindCSS CDN -->
	<script src="https://cdn.tailwindcss.com"></script>
	<!-- Configuración de Tailwind -->
	<script>
		tailwind.config = {
			theme: {
				extend: {
					colors: {
						primary: "#0d42ff",
						secondary: "#4eed05",
					},
				},
			},
		};
	</script>
</head>
<body class="bg-transparent text-gray-900">
	<header>
		<nav class=" mb-4 p-4 w-full bg-white">
			<div class="container mx-auto flex justify-between items-center">
				<a class="text-xl font-bold " asp-area="" asp-controller="Home" asp-action="Index">Asistencia<span class="text-primary">UNC</span></a>
				<ul class="flex space-x-4 text-lg">
					<li><a class="hover:text-primary" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a></li>
					<li><a class="hover:text-primary" asp-area="" asp-controller="Home" asp-action="Eventos">Eventos</a></li>
					<li><a class="hover:text-primary" asp-area="" asp-controller="Home" asp-action="Talleres">Talleres</a></li>
					<li><a class="hover:text-primary" asp-area="" asp-controller="Home" asp-action="Blog">Blog</a></li>
				</ul>
				<div class="flex gap-4">
					<a class="text-primary" asp-area="" asp-controller="Admin" asp-action="Dashboard">
						Admin
					</a>	
					<a class="text-primary" asp-area="" asp-controller="User" asp-action="Index">
						Usuario
					</a>
					<a class="text-primary" asp-area="" asp-controller="Checkin" asp-action="Index">
						Checkin
					</a>
				</div>


				<partial name="_LoginPartial" />
			</div>
		</nav>
	</header>

	<div class="container mx-auto">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

	@* <script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script> *@
	<script src="~/js/site.js"></script>
	@RenderSection("Scripts", required: false)
</body>
</html>
