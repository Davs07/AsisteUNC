@model AsitenciaUNC_attemp_2.Models.Evento
@{
    ViewData["Title"] = "Eliminar";
}

<div class="max-w-4xl mx-auto p-6 bg-white rounded-lg shadow-md">
    <div class="flex justify-between items-center pt-4">
        <h2 class="text-2xl font-bold text-blue-600">Eliminar Evento</h2>
        <a asp-action="Index" class="bg-gray-500 text-white py-2 px-4 rounded-md hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-opacity-50">
            Volver a la lista
        </a>
    </div>
    <br />
    <div class="flex justify-center">
        <div class="w-full max-w-md">
            <div class="bg-white rounded-lg shadow-md">
                <div class="p-6">
                    <form method="post" asp-action="Eliminar">
                        <input type="hidden" asp-for="Id" />
                        <div asp-validation-summary="ModelOnly" class="text-red-500 mb-3"></div>
                        <div class="mb-3">
                            <label asp-for="Titulo" class="block text-gray-700 font-bold mb-2"></label>
                            <input asp-for="Titulo" class="form-control w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" disabled />
                        </div>
                        <div class="text-right">
                            <button type="submit" class="bg-red-500 text-white py-2 px-4 rounded-md hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-opacity-50">Eliminar</button>
                            <a asp-controller="Evento" asp-action="Index" class="bg-gray-500 text-white py-2 px-4 rounded-md hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-opacity-50 ml-2">Regresar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>